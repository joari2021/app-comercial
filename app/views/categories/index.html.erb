<h1 class="h3 mb-2 text-gray-800">Categoria de Productos</h1>

<div>
    <%= link_to new_category_path, {remote: true, class:"btn btn-info", id:"add-categoria-btn"} do %>
        <span class="fas fa-plus-square" style=""></span>
    <%end%>
</div>
<br />

<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" width="100%">
                <thead>
                    <tr>
                        <th>Nombre Categoria</th>
                        <th>Descripción</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="tablaCategorias">
                    <%@categorias.each do |cat|%>
                        <tr id="categoria_<%= cat.id %>">
                            <td><%= cat.name%></td>
                            <td><%= cat.description%></td>
                            <td>
                                <%=link_to "Editar", edit_category_path(cat), html_options = {class: "btn btn-info btn-xs", remote: true}%>
                                <%=link_to "Borrar", cat, remote: true, method: :delete, data: { confirm: "¿Borrar Categoria: #{cat.name}?"}, class: "btn btn-danger btn-xs"%>
                            </td>
                        </tr>
                    <%end%>
                </tbody>
            </table>
            
        </div>
    </div>
</div>

<%= render 'modal_categorias'%>