<table class="table table-bordered" id="tabla-productos" width="100%" cellspacing="0">
  <thead>
    <tr>
        <th>Nombre producto</th>
        <th>Existencia</th>
        <th>Precio</th>
        <th>Categoria</th>
        <th>Proveedor</th>
        <th>Mostrar</th>
    </tr>
  </thead>
  <tbody>
    <% @productos.each do |prod| %>
      <tr>
        <td><%= prod.name %></td>
        <td><%= prod.existence %></td>
        <td>$<%= prod.price %></td>
        <td><%= prod.category != nil ? prod.category.name : "No tiene categoria" %></td>
        <td><%= prod.supplier != nil ? prod.supplier.name : "No tiene proveedor" %></td>
        <td>
        <%= link_to "Mostrar", product_path(prod), html_options = {class: "btn btn-info btn-xs"} %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>